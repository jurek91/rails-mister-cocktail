<div class="homepageconatiner">
  <nav class ="navbar mb-0">
    <div class = "nav-btn">
    <%= link_to "Create New", new_cocktail_path%>
  </div>
      <div class= "header-title">
      <h3>Sassy Cocktails</h3>
    </div>
    <div class="none">
    </div>
       </nav>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://res.cloudinary.com/dyaczxyrx/image/upload/v1613092960/Cocktails/banner10_itxdiy.jpg" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://res.cloudinary.com/dyaczxyrx/image/upload/v1613090790/Cocktails/WOO_WOO_fpidkd.jpg" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://res.cloudinary.com/dyaczxyrx/image/upload/v1613093178/Cocktails/banner12_p4peof.jpg" alt="Third slide">
    </div>
  </div>

  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

</div>



<div class="container mt-5">
  <ul>
     <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class= "card">
        <<!-- div class="card-img"> -->
          <% if cocktail.photo.attached? %>
            <%=cl_image_tag cocktail.photo.key%>
          <% else %>
            <%= image_tag "drink.jpg" %>
          <% end %>
       <!--  </div> -->

        <li><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></li>

      </div>
    <% end %>
    </ul>
    </div>
</div>

<div class ="footer">
    <div class="footer-link">
      <h4><%= link_to "Sassy Cocktails", cocktails_path %></h4>
    </div>
  </div>



