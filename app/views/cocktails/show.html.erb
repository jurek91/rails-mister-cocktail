<div class="container mt-5">
  <div class="cocktail-card">
    <div class="cocktail-pic">
      <% if @cocktail.photo.attached?%>
        <%= cl_image_tag @cocktail.photo.key%>
      <% else %>
        <%= image_tag "drink.jpg" %>
      <% end %>
    </div>

    <div class="title-ingredients-container">
      <div class="cocktail-name">
          <h1><%= @cocktail.name %></h1>
      </div>

      <div class="cocktail-ingredients d-flex">
        <div class="ingredients-container">
           <h4>Ingredients</h4>
          <% @cocktail.doses.each do |dose| %>
          <div class="ingredient-and-delete">
            <div class="ingredient-name">
              <h6><%= "#{dose.ingredient.name} - #{dose.description}" %></h6>
            </div>
            <div class="delete-cocktail-icon">
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete ingredient?" } do %>
                <i class="far fa-times-circle"></i>
              <%end %>
            </div>
          <% end %>
        </div>
              </div>



        <div class="add-ingredient-list">
          <h4>Add an Ingredient</h4>
          <%= simple_form_for [@cocktail, @dose] do |f| %>
            <%= f.association :ingredient%>
            <%= f.input :description %>
            <%= f.submit %>
          <% end %>
        </div>
    </div>
