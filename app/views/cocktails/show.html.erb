<div class="navbar-show">
<nav class ="navbar mb-0">
    <div class = "nav-btn">
    <%= link_to "Go Back", cocktails_path%>
  </div>
  <div class= "header-title">
    <h3>Sassy Cocktails</h3>
  </div>
  <div class= "nav-btn">
    <%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: "Are you sure you want to delete this cocktail?" } %>
  </div>
</nav>
</div>
<div class="container mt-5">
  <div class="cocktail-card">
    <div class="cocktail-pic">
      <% if @cocktail.photo.attached?%>
        <%= cl_image_tag @cocktail.photo.key%>
      <% else %>
        <%= image_tag "drink.jpg" %>
      <% end %>
    </div>
    <div class="ingredient-card">
      <h2><%= @cocktail.name %></h2>
      <div class='ingredient-list mt-2'>
      <% @cocktail.doses.each do |dose| %>
      <div class="ingredient-and-delete">
        <h6><%= "#{dose.ingredient.name} - #{dose.description}" %></h6>
        <div class="delete-cocktail-icon">
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete ingredient?" } do %>
                <i class="far fa-times-circle"></i>
              <%end %>
            </div>
            </div>
      <% end %>
    </div>
    <div class="ingr-list">
          <h4>Add Ingredient</h4>
          <%= simple_form_for [@cocktail, @dose] do |f| %>
            <%= f.association :ingredient%>
            <%= f.input :description %>
            <%= f.submit %>
          <% end %>
        </div>
  </div>
</div>










